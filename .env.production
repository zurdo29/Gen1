# Production Environment Variables Template
# Copy this file to .env.production.local and fill in the actual values

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80;https://+:443

# SSL Certificate (if using HTTPS)
CERT_PASSWORD=your_certificate_password_here
ASPNETCORE_Kestrel__Certificates__Default__Password=${CERT_PASSWORD}
ASPNETCORE_Kestrel__Certificates__Default__Path=/https/aspnetapp.pfx

# Database/Storage
REDIS_CONNECTION_STRING=redis:6379

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Monitoring and Logging
SERILOG_MINIMUM_LEVEL=Warning
ENABLE_DETAILED_METRICS=true
PERFORMANCE_LOGGING_ENABLED=true

# Security
ENABLE_HTTPS_REDIRECTION=true
REQUIRE_HTTPS=true
ENABLE_HSTS=true

# Rate Limiting
GENERATION_REQUESTS_PER_MINUTE=10
EXPORT_REQUESTS_PER_MINUTE=5
GENERAL_REQUESTS_PER_MINUTE=100

# Storage Limits
MAX_FILE_SIZE=52428800
TEMP_CLEANUP_INTERVAL_HOURS=24

# Plugin Settings
ENABLE_EXTERNAL_PLUGINS=false
PLUGIN_DIRECTORY=/app/plugins

# Frontend Build Settings
VITE_API_URL=/api
NODE_ENV=production