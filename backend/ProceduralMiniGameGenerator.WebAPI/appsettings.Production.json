{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Information",
      "Hangfire": "Warning"
    },
    "PerformanceThresholds": {
      "Default": "3000",
      "Generation": "10000",
      "Export": "5000",
      "Validation": "2000"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Warning",
        "ProceduralMiniGameGenerator": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/webapi-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/errors-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "restrictedToMinimumLevel": "Error",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "PluginSettings": {
    "Directory": "plugins",
    "EnableExternalPlugins": false,
    "LoadBuiltInPlugins": true
  },
  "AllowedHosts": "*",
  "CorsOrigins": [
    "https://yourdomain.com",
    "https://www.yourdomain.com"
  ],
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },
  "Caching": {
    "DefaultExpirationMinutes": 30,
    "GenerationCacheMinutes": 60,
    "ConfigurationCacheMinutes": 120
  },
  "RateLimiting": {
    "GenerationRequestsPerMinute": 10,
    "ExportRequestsPerMinute": 5,
    "GeneralRequestsPerMinute": 100
  },
  "Security": {
    "EnableHttpsRedirection": true,
    "RequireHttps": true,
    "EnableHsts": true,
    "HstsMaxAge": 31536000,
    "EnableSecurityHeaders": true,
    "EnableRateLimiting": true,
    "MaxRequestSize": 10485760,
    "AllowedFileExtensions": [".json", ".xml", ".csv", ".txt"],
    "BlockedUserAgents": ["bot", "crawler", "spider"],
    "EnableInputSanitization": true,
    "MaxJsonDepth": 10,
    "MaxStringLength": 1000
  },
  "Monitoring": {
    "EnableDetailedMetrics": true,
    "HealthCheckIntervalSeconds": 30,
    "PerformanceLoggingEnabled": true
  },
  "Storage": {
    "TempDirectory": "/app/temp",
    "ExportDirectory": "/app/exports",
    "MaxFileSize": 52428800,
    "CleanupIntervalHours": 24
  }
}